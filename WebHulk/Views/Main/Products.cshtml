@model IList<ProductViewModel>

<style>
    .card {
        width: 100%;
        max-width: 300px;
        height: 350px;
    }

    .carousel-inner img {
        max-width: 100%;
        max-height: 100%;
        object-fit: contain;
        display: flex;
        align-items: center;
    }

    .carousel-inner {
        display: flex;
        align-items: center;
    }
    .card-body {
        display: flex;
        flex-direction: column;
        text-align: center;
    }

</style>

<div class="container mt-3 mb-5">
    <h2 class="text-center">Products</h2>
    <div class="row">
        @foreach (var p in Model)
        {
            <div class="col-lg-3 col-md-3">
                <div class="card">
                    <div id="carousel-@p.Id" class="carousel slide m-3">
                        <div class="carousel-inner">
                            @for (var i = 0; i < p.ProductImages.Count; i++)
                            {
                                var image = p.ProductImages.ElementAt(i).Image;
                                <div class="carousel-item @(i == 0 ? "active" : "")">
                                    <img src="@Url.Content("~/images/" + image)" alt="@p.Name" />
                                </div>
                            }
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carousel-@p.Id" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon "></span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carousel-@p.Id" data-bs-slide="next">
                            <span class="carousel-control-next-icon"></span>
                        </button>
                    </div>

                    <div class="card-body">
                        <h6 class="card-title mt-auto text-secondary">@p.Name</h6>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
