@model IList<CategoryItemViewModel>

<div class="container mt-3 mb-5">
    <h2 class="text-center">Тактичне спорядження</h2>
    <a href="/main/create" class="btn btn-success">Add</a>
    <div class="row">
        @foreach (var c in Model)
        {
            <div class="col-lg-2 col-md-4 col-sm-6">
                <div class="card mt-4 h-100">
                    <img class="card-img-top img-fluid" src="@c.Image" alt="@c.Name">
                    <div class="card-body d-flex align-items-center justify-content-center">
                        <h6 class="card-title text-center ">@c.Name</h6>
                    </div>
                </div>
            </div>
        }
    </div>

</div>

